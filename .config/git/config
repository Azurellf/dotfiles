# .config/git/config

[core]
  editor = nvim
  pager = delta
  safecrlf = true

[interactive]
  diffFilter = delta --color-only

[merge]
  confilctStyle = zdiff3

[worktree]
  useRelativePaths = true

[delta]
  navigate = true
  dark = true
  line-numbers = true
  side-by-side = true

